def plot_graphs():
    data = {
        "Month": ["January", "February", "March", "April", "May", "June"],
        "Sales": [200, 220, 250, 280, 300, 320],
        "Profit": [50, 70, 80, 90, 100, 110],
        "Customer_Count": [30, 35, 40, 50, 55, 60],
    }
    df = pd.DataFrame(data)
    plt.figure(figsize=(6,4))
    sns.lineplot(x="Month", y="Sales", data=df, marker='o')
    plt.title("Monthly Sales")
    plt.tight_layout()
    plt.show()

    fig = px.line(df, x="Month", y=["Sales", "Profit"], title="Interactive Sales vs Profit")
    fig.write_html("interactive_dashboard.html")
    messagebox.showinfo("Dashboard", "Interactive dashboard saved as HTML.")

btn_graph = ttk.Button(frame1, text="Plot Graphs", command=plot_graphs)
